<% layout('./layouts/layout') -%>

  <article class="col-sm-8">
    <div class="row">
      <h2 class="col-sm-12"><%= title %></h2>
    </div>

    <form id="new_item" class="form-horizontal" action="/inventory/new/item" method="post">
      <div class="form-group row">
        <label class="control-label col-sm-2" for="name">Name</label>
        <div class="col-sm-2">
          <input type="text" class="form-control" name="name" maxlength="30" placeholder="Item" autofocus="true" required><br>
        </div>

        <label class="control-label col-sm-2" for="code">Code</label>
        <div class="col-sm-2">
          <input type="number" class=" form-control" name="code" placeholder="UPC">
        </div>

        <label class="control-label col-sm-2" for="type">Type</label>
        <div class="col-sm-2">
          <input type="text" class="form-control" name="type" maxlength="30" placeholder="Category"><br>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 control-label" for="quantity">Quantity</label>
        <div class="col-sm-2">
          <input type="number" class="form-control" name="quantity">
        </div>

        <label class="col-sm-2 control-label" for="sale">Amount</label>
        <div class="col-sm-2">
          <input type="number" class="form-control" name="sale">
        </div>

        <label class="col-sm-2 control-label" for="cost">Cost</label>
        <div class="col-sm-2">
          <input type="number" class="form-control" name="cost">
        </div>
      </div>

      <div class="form-group row">
        <label class="col-sm-2 control-label" for="description">Description</label>
        <div class="col-sm-10">
          <textarea class="form-control" name="description" rows="5" cols="51" maxlength="250" placeholder="Submit a brief description of the item." form="new_item" required></textarea>
        </div>
      </div>



      <div class="col-sm-offset-10 col-sm-2">
        <button type="submit" class="btn btn-default">Submit</button>
      </div>
    </form>
  </article>
</div>
